{
	"compilerOptions": {
		"outDir": "./build",
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"lib": [
			"dom",
			"es7",
			"es2016.array.include"
		],
		"jsx": "react",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"./src/**/*"
	],
	"ts-node": {
		"files": true
	}
}
