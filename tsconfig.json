{
	"compilerOptions": {
		"outDir": "./lib",
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"dom",
			"es7",
			"es2016.array.include"
		],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"./src/**/*",
		"node_modules/laji-form/lib/**/*.d.ts"
  ]
}
